{
  "name": "Books-A-Million",
  "enabled": true,
  "interval": 120,
  "timeout": 30,
  "retry_attempts": 5,
  "search_radius": 250,
  "target_zipcode": "30135",
  "bypass_method": "cloudscraper",
  "cookie_file": "data/booksamillion_cookies.json",
  "product_db_file": "data/booksamillion_products.json",
  "database": {
    "enabled": false,
    "type": "sqlite",
    "file": "data/stockchecker.db",
    "host": "localhost",
    "port": 5432,
    "name": "stockchecker",
    "user": "postgres",
    "password": ""
  },
  "headers": {
    "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/135.0.0.0 Safari/537.36",
    "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,image/avif,image/webp,image/apng,*/*;q=0.8,application/signed-exchange;v=b3;q=0.7",
    "Accept-Language": "en-US,en;q=0.9",
    "DNT": "1"
  },
  "webhook": {
    "enabled": true,
    "url": "",
    "format": "discord",
    "mentions": [],
    "avatar_url": "https://www.booksamillion.com/favicon.ico",
    "username": "Books-A-Million Stock Alert"
  },
  "debug": {
    "verbose": false,
    "save_html": false,
    "log_requests": false,
    "log_level": "INFO"
  }
}
